<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddShopActivity">

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:ems="10"
        android:hint="Shop name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/descriptionEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:ems="10"
        android:hint="Shop description"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/radiusEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descriptionEditText"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Shop radius"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/longitudeEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radiusEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:ems="10"
        android:hint="Shop longitude"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/latitudeEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radiusEditText"
        android:layout_alignStart="@+id/nameEditText"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-5dp"
        android:ems="10"
        android:hint="Shop latitude"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/addShopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="73dp"
        android:layout_marginBottom="113dp"
        android:background="@color/colorPrimary"
        android:onClick="onClick"
        android:text="Add shop"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/cancelAddShopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/addShopButton"
        android:layout_alignEnd="@+id/nameEditText"
        android:textColor="#FFF"
        android:background="@color/colorPrimary"
        android:text="Cancel" />
</RelativeLayout>